{
  "expo": {
    "name": "Cifras Cristas",
    "slug": "cifras-cristas",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0f766e"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Precisamos do microfone para detectar a nota e ajudar voce a afinar seu instrumento."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0f766e"
      },
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro"
    }
  }
}
