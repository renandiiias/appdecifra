{
  "name": "cifras-mvp",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean:mobile": "rm -rf apps/mobile/.expo apps/mobile/.metro-cache apps/mobile/.cache && rm -rf node_modules/.cache .turbo",
    "clean:mobile:hard": "rm -rf apps/mobile/node_modules",
    "hydrate:mobile": "bash scripts/hydrate-mobile.sh",
    "dev:web": "corepack pnpm --filter @cifras/web dev",
    "dev:mobile": "PATH=\"/opt/homebrew/opt/node@22/bin:$PATH\" corepack pnpm --filter @cifras/mobile start",
    "dev:mobile:clear": "PATH=\"/opt/homebrew/opt/node@22/bin:$PATH\" corepack pnpm --filter @cifras/mobile start:clear",
    "dev:mobile:tunnel": "PATH=\"/opt/homebrew/opt/node@22/bin:$PATH\" corepack pnpm --filter @cifras/mobile start:tunnel",
    "dev:mobile:tunnel:clear": "PATH=\"/opt/homebrew/opt/node@22/bin:$PATH\" corepack pnpm --filter @cifras/mobile start:clear:tunnel",
    "test": "corepack pnpm --filter @cifras/shared test",
    "import:txt": "node scripts/import-local-txt.mjs",
    "import:export:one": "node scripts/import-supabase-export-one.mjs",
    "import:export:all": "node scripts/import-supabase-export-all.mjs"
  },
  "devDependencies": {
    "csv-parse": "^6.1.0"
  }
}
